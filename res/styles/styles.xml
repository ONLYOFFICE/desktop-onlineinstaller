<?xml version="1.0" encoding="utf-8"?>
<Styles>
  <Widget id="MainWindow">
    <Color background="WINDOW_BKG"/>
    <Color border="WINDOW_BRD"/>
  </Widget>
  <Widget id="HeaderBar">
    <SizePolicy HSizeBehavior="Expanding" VSizeBehavior="Fixed"/>
    <Metrics TextMarginLeft="12" TextAlignment="AlignHLeft|AlignVCenter"/>
    <BaseSize width="50" height="28"/>
    <Color background="WINDOW_BKG"/>
    <Color text="TEXT_NORMAL"/>
  </Widget>
  <Widget id="HeaderCloseButton">
    <SizePolicy HSizeBehavior="Fixed" VSizeBehavior="Fixed"/>
    <Metrics PrimitiveWidth="1"/>
    <BaseSize width="40" height="28"/>
    <Color background="WINDOW_BKG" hover="CLOSEBTN_HOVER_BKG" pressed="CLOSEBTN_PRESSED_BKG" disabled="CLOSEBTN_DISABLED_BKG"/>
    <Color primitive="CLOSEBTN_PRIM" hover="CLOSEBTN_HOVER_PRIM" pressed="CLOSEBTN_HOVER_PRIM" disabled="CLOSEBTN_PRIM"/>
  </Widget>
  <Widget id="PushButton">
    <SizePolicy HSizeBehavior="Fixed" VSizeBehavior="Fixed"/>
    <Metrics BorderWidth="1"/>
    <BaseSize width="100" height="28"/>
    <Color background="PUSHBTN_BKG" hover="PUSHBTN_HOVER_BKG" pressed="PUSHBTN_PRESSED_BKG" disabled="PUSHBTN_DISABLED_BKG"/>
    <Color border="PUSHBTN_BRD" hover="PUSHBTN_BRD" pressed="PUSHBTN_BRD" disabled="PUSHBTN_BRD"/>
    <Color text="PUSHBTN_TEXT" hover="PUSHBTN_TEXT" pressed="PUSHBTN_TEXT" disabled="PUSHBTN_TEXT_DISABLED"/>
    <Color base="WINDOW_BKG" hover="WINDOW_BKG" pressed="WINDOW_BKG" disabled="WINDOW_BKG"/>
  </Widget>
  <Widget id="Selector">
    <Metrics TextMarginLeft="6" TextMarginRight="6" PrimitiveRadius="1" AlternatePrimitiveWidth="2"/>
    <Color background="WINDOW_BKG" hover="WINDOW_BKG" pressed="WINDOW_BKG" disabled="WINDOW_BKG"/>
    <Color base="WINDOW_BKG" hover="WINDOW_BKG" pressed="WINDOW_BKG" disabled="WINDOW_BKG"/>
    <Color text="TEXT_NORMAL" hover="TEXT_NORMAL" pressed="TEXT_NORMAL" disabled="TEXT_DISABLED"/>
    <Color primitive="SELECTOR_NORMAL" hover="SELECTOR_HOVER" pressed="SELECTOR_PRESSED" disabled="SELECTOR_DISABLED"/>
    <Color alternatePrimitive="SELECTOR_CHECK" hover="SELECTOR_CHECK" pressed="SELECTOR_CHECK" disabled="SELECTOR_DISABLED"/>
  </Widget>
  <Widget id="ProgressBar">
    <Color background="WINDOW_BKG"/>
    <Color base="PROGRESSBAR_BKG"/>
    <Color alternateBase="PROGRESSBAR_CHUNK"/>
  </Widget>
  <Widget id="Label">
    <Color background="WINDOW_BKG"/>
    <Color text="TEXT_PRETTY"/>
  </Widget>
  <Widget id="ControlLabel">
    <Metrics TextAlignment="AlignHLeft|AlignVTop"/>
    <BaseSize width="50" height="36"/>
    <Color background="WINDOW_BKG"/>
    <Color text="TEXT_NORMAL"/>
  </Widget>
</Styles>
